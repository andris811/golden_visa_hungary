---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
const RAW_BASE = import.meta.env.BASE_URL ?? '/';
const BASE = RAW_BASE.endsWith('/') ? RAW_BASE : RAW_BASE + '/';
---
<BaseLayout lang="zh" title="联系我们｜匈牙利黄金签证" description="添加微信或提交表单，获取一对一评估与办理方案。">
  <Fragment slot="header"><Header currentLang="zh" /></Fragment>

  <section class="max-w-6xl mx-auto px-4 py-12 grid md:grid-cols-2 gap-8">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold">联系我们</h1>
      <p class="mt-4 text-neutral-700">添加微信或填写表单，我们将在1–2个工作日内与您联系（以实际为准）。</p>
      <div class="mt-6 p-4 border rounded">
        <p class="text-sm text-neutral-700">微信二维码</p>
        <img src={`${BASE}images/wechat-qr.png`} alt="WeChat QR" class="mt-3 w-40 h-40 object-contain" />
      </div>
    </div>

    <form class="p-6 border rounded space-y-4" method="post" action="#">
      <div>
        <label class="block text-sm font-medium">姓名</label>
        <input class="mt-1 w-full border rounded px-3 py-2" name="name" required />
      </div>
      <div>
        <label class="block text-sm font-medium">手机号 / 微信号</label>
        <input class="mt-1 w-full border rounded px-3 py-2" name="contact" required />
      </div>
      <div>
        <label class="block text-sm font-medium">意向与问题</label>
        <textarea class="mt-1 w-full border rounded px-3 py-2" rows="4" name="message"></textarea>
      </div>
      <button class="px-4 py-2 bg-neutral-900 text-white rounded" type="submit">提交</button>
    </form>
  </section>

  <Fragment slot="footer"><Footer currentLang="zh" /></Fragment>
</BaseLayout>