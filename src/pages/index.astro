---
const target = '/zh/';
const absolute = new URL(target, Astro.site ?? '/');
---
<html lang="zh">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content={`0;url=${absolute.pathname}`} />
    <meta name="robots" content="noindex" />
    <title>Redirecting…</title>
  </head>
  <body>
    <p>Redirecting to Chinese homepage… <a href={absolute.pathname}>Click here</a></p>
  </body>
</html>
