---
const BASE = import.meta.env.BASE_URL ?? '/';
const to = `${BASE}zh/`;
---
<html lang="zh">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="refresh" content={`0;url=${to}`} />
    <meta name="robots" content="noindex" />
    <title>Redirecting…</title>
  </head>
  <body>
    <p>Redirecting to Chinese homepage… <a href={to}>Click here</a></p>
  </body>
</html>
