---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { BASE, L } from '../../utils/base';

const currentLang = 'en';
---
<BaseLayout lang="en" title="Hungary Golden Visa | Official Info & Professional Support" description="Secure residency in Hungary for you and your family: program overview, process, investment options, FAQ, and expert assistance.">
  <Fragment slot="header"><Header currentLang="en" currentPage="home" /></Fragment>

  <!-- Hero Section with Background -->
  <section class="relative h-[600px] flex items-center justify-center overflow-hidden">
    <img
      src={`${BASE}images/hero/hero-home.svg`}
      alt="Budapest skyline"
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="hero-overlay absolute inset-0"></div>
    <div class="relative z-10 max-w-4xl mx-auto px-4 text-center text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in-up">
        A Stable Path to Europe
      </h1>
      <p class="text-lg md:text-xl mb-8 opacity-95 animate-fade-in-up delay-200">
        The Hungary Golden Visa helps your family access European lifestyle and Schengen mobility
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4 animate-fade-in-up delay-300">
        <a href={L(`${currentLang}/contact/`)} class="btn-primary px-8 py-4 rounded-lg text-white font-semibold shadow-lg">
          Contact Us
        </a>
        <a href={L(`${currentLang}/program/`)} class="px-8 py-4 rounded-lg border-2 border-white text-white font-semibold hover:bg-white hover:text-purple-600 transition-all">
          Learn the Program
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="max-w-6xl mx-auto px-4 py-20">
    <div class="grid md:grid-cols-3 gap-8">
      <div class="card-hover p-8 border rounded-xl bg-white shadow-sm animate-fade-in-up delay-100">
        <div class="w-16 h-16 bg-gradient-primary rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">Family Coverage</h3>
        <p class="text-neutral-600">Include spouse and children in one plan.</p>
      </div>

      <div class="card-hover p-8 border rounded-xl bg-white shadow-sm animate-fade-in-up delay-200">
        <div class="w-16 h-16 bg-gradient-secondary rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">Schengen Access</h3>
        <p class="text-neutral-600">Travel and business made easier.</p>
      </div>

      <div class="card-hover p-8 border rounded-xl bg-white shadow-sm animate-fade-in-up delay-300">
        <div class="w-16 h-16 bg-gradient-success rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-3">Compliance First</h3>
        <p class="text-neutral-600">Clear process with professional support.</p>
      </div>
    </div>
  </section>

  <!-- Details Section -->
  <section class="bg-gradient-to-b from-white to-neutral-50 py-20">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <div class="card-hover p-8 border rounded-2xl bg-white shadow-md animate-slide-in-left">
          <div class="inline-block px-4 py-2 bg-purple-100 text-purple-700 rounded-full text-sm font-semibold mb-4">
            Program Benefits
          </div>
          <h3 class="text-2xl font-bold mb-6">Program Highlights</h3>
          <ul class="space-y-4">
            <li class="flex items-start">
              <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-neutral-700">Transparent timeline and steps</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-neutral-700">Whole-family residency solutions</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-neutral-700">Legal and translation support</span>
            </li>
          </ul>
          <a href={L(`${currentLang}/program/`)} class="inline-flex items-center mt-6 text-purple-600 font-semibold hover:text-purple-700 transition-colors">
            See program details
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>

        <div class="card-hover p-8 border rounded-2xl bg-white shadow-md animate-slide-in-right">
          <div class="inline-block px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-4">
            Investment Plans
          </div>
          <h3 class="text-2xl font-bold mb-6">Investment Options</h3>
          <p class="text-neutral-700 mb-6 leading-relaxed">
            Multiple routes for different risk and budget profiles. Our professional team will tailor the best investment solution for you, ensuring optimal balance between compliance and returns.
          </p>
          <div class="bg-gradient-to-r from-blue-50 to-purple-50 p-6 rounded-xl mb-6">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm text-neutral-600">Multiple Options</span>
              <span class="text-2xl font-bold text-purple-600">3+</span>
            </div>
            <div class="w-full bg-white rounded-full h-2">
              <div class="bg-gradient-primary h-2 rounded-full" style="width: 75%"></div>
            </div>
          </div>
          <a href={L(`${currentLang}/investment/`)} class="inline-flex items-center text-purple-600 font-semibold hover:text-purple-700 transition-colors">
            See investment routes
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Fragment slot="footer"><Footer currentLang="en" /></Fragment>
</BaseLayout>