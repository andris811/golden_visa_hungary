---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
const RAW_BASE = import.meta.env.BASE_URL ?? '/';
const BASE = RAW_BASE.endsWith('/') ? RAW_BASE : RAW_BASE + '/';
---
<BaseLayout lang="en" title="Contact | Hungary Golden Visa" description="Add us on WeChat or send a message to get a tailored evaluation and plan.">
  <Fragment slot="header"><Header currentLang="en" /></Fragment>

  <section class="max-w-6xl mx-auto px-4 py-12 grid md:grid-cols-2 gap-8">
    
    <div>
      <h1 class="text-2xl md:text-3xl font-bold">Contact Us</h1>
      <p class="mt-4 text-neutral-700">Add us on WeChat or submit the form—we’ll get back within 1–2 business days (indicative).</p>
      <div class="mt-6 p-4 border rounded">
        <p class="text-sm text-neutral-700">WeChat QR</p>
        <img src={`${BASE}images/wechat-qr.png`} alt="WeChat QR" class="mt-3 w-40 h-40 object-contain" />
      </div>
    </div>

    <form class="p-6 border rounded space-y-4" method="post" action="#">
      <div>
        <label class="block text-sm font-medium">Name</label>
        <input class="mt-1 w-full border rounded px-3 py-2" name="name" required />
      </div>
      <div>
        <label class="block text-sm font-medium">Phone / WeChat ID</label>
        <input class="mt-1 w-full border rounded px-3 py-2" name="contact" required />
      </div>
      <div>
        <label class="block text-sm font-medium">Message</label>
        <textarea class="mt-1 w-full border rounded px-3 py-2" rows="4" name="message"></textarea>
      </div>
      <button class="px-4 py-2 bg-neutral-900 text-white rounded" type="submit">Send</button>
    </form>
  </section>

  <Fragment slot="footer"><Footer currentLang="en" /></Fragment>
</BaseLayout>