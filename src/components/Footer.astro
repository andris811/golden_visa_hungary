---
const { currentLang = "zh" } = Astro.props;
const RAW_BASE = import.meta.env.BASE_URL ?? '/';
const BASE = RAW_BASE.endsWith('/') ? RAW_BASE : RAW_BASE + '/';
---
<footer class="border-t mt-16">
  <div class="max-w-6xl mx-auto px-4 py-8 grid md:grid-cols-3 gap-6 items-center">
    <div class="text-sm">© {new Date().getFullYear()} AVDev · All rights reserved.</div>
    <div class="flex gap-4 text-sm justify-center">
      <a href={`/${currentLang}/program/`.replace(/^\/+/, `${BASE}`)}>Program</a>
      <a href={`/${currentLang}/investment/`.replace(/^\/+/, `${BASE}`)}>Investment</a>
      <a href={`/${currentLang}/about/`.replace(/^\/+/, `${BASE}`)}>About</a>
      <a href={`/${currentLang}/contact/`.replace(/^\/+/, `${BASE}`)}>Contact</a>
    </div>
    <div class="justify-self-end">
      <img src={`${BASE}images/wechat-qr.png`} alt="WeChat" class="w-16 h-16" />
    </div>
  </div>
</footer>